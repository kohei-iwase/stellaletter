<h5>マイスキル</h5>

    <% if @user.user_skills.any? %>

        <% @user.user_skills.each do |skill| %>
            <%= link_to user_skill_path(skill) do %>
            <div class="like-card-wrapper">
                <div class= 'like-card'>
                    <div class="like-image">
                        <%#= attachment_image_tag skill, :image,:width =>'95%' ,fallback: "users/no_image.png"%>
                    </div>
                    <div class="like-title">
                        <h4><%= skill.name %></h4>
                    </div>
                </div>
            </div>
            <% end %>
        <% end %>
    <% else %>
        <h6>マイスキルは未設定です</h6>
     <% end %>
         <div class="button-form">
            <%= link_to "スキル一覧へ", user_skills_path, class: "btn btn-default"%>
        </div>
