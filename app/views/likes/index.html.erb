
<div class="content-box">
    <div class ="row">
        <div class="title">
            <h1>性癖一覧・追加画面</h1>
        </div>
        <div class="main-content">
            <div class="col-xs-3">
                <%= render 'users/user_box', user: @user%>
            </div>
            <div class="col-xs-9">
		   <h3>性癖一覧</h3>
				<% @likes.each do |like| %>
					<div class="card-form-wrapper">
    		            <div class="system-card-wrapper">
            		        	<div class= 'status-card'>
                    		    	<div class="status-image">
                            			<%= attachment_image_tag like, :image,:width =>'95%' ,fallback: "users/no_image.png"%>
                        			</div>
                        			<div class="status-title">
                            			<%= like.name %>
                        			</div>
                    			</div>
		               	</div>
		               	<div class="system-follow-form">
							<%= render "likes/follow" ,like: like %>
						</div>
					</div>
				<% end %>
		</div>
			<hr>
	<h3>システム追加</h3>
		<div class="new-form">
			<%= render 'likes/new_form', flash: flash %>


    	</div>
    </div>
</div>