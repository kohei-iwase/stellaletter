<%= form_for(@character) do |f| %>
 
    <% if @post_image.errors.any? %>
        <%= @post_image.errors.count %>件のエラーが発生しました
        <% @post_image.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
 
    <%= f.attachment_field :image %>
    <%= f.text_field :name %>
    <%= f.text_area :introduction %>
    <%= f.submit %>
<% end %>