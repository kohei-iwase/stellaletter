<div class="user-box">
    <div class="user-image">
        <%= attachment_image_tag user, :image,width:'90%',fallback: "users/no_image.png"%>
    </div>
    <div class="user-profile">
        名前
        <h3><%=link_to user.name, user_path(user) %></h3>
        SNS
        <h3><%#= user.sns%></h3>
    </div>
    <div class="buttons">
        <%= render 'users/user_buttons', user: user %>
    </div>
    <div class="user-status">
        <%= render 'users/follow_counts', user: user %>
    </div>
    <div class="user-system">
        <%= render 'users/systems', systems: @systems %>
    </div>
    <div class="user-likes">
        <%= render 'users/likes', likes: @likes %>
    </div>
    <div class="user-skills">
        <%= render 'users/skills', user_skills: @user_skills %>
    </div>
</div>
