<div class="user-box">
    <div class="user-image">
        <%= attachment_image_tag user, :image,width:'100%',fallback: "users/no_image.png", class: "img-circle"%>
    </div>
    <div class="user-profile">
        名前
        <h3><%=link_to user.name, user_path(user) %></h3>
        SNS
        <h3><%#= user.sns%></h3>
    </div>
    <div class="buttons">
            <%= render 'users/user_buttons', user: user %>
    </div>        
    <div class="user-status">
        <%= render 'users/status', user: user %>
    </div>
    <div class="user-system">
        <h5>システム</h5>
        <% if @systems.nil? %>
            <h6>システムは未設定です</h6>
        <% else %>
            <% @systems.each do |system| %>
                <span class= 'user-systems'>
                    <%= system.title %></span>
            <% end %>
        <% end %>
    </div>
    <div class="user-likes">
        <h5>性癖</h5>
        <% if @likes.nil? %>
            <h6>性癖は未設定です</h6>
        <% else %>
            <% @user.likes.each do |like| %>
                <span class= 'user-likes'><%= likes.name %></span>
            <% end %>
        <% end %>
    </div>
    <div class="user-dislikes">
        <h5>自己紹介</h5>
        <% if @dislikes.nil? %>
            <h6>地雷は未設定です</h6>
        <% else %>
            <% @user.dislikes.each do |dislikes| %>
                <span class= 'user-dislikes'><%= dislikes.name %></span>
            <% end %>
        <% end %>
    </div>
</div>
