<div class="content-box">
    <div class ="row">
        <div class="title">
            <h2>キャラクター作成</h2>
        </div>
        <div class="form-body">
                <%= form_with model:@character do |f| %>
                <div class="form-group">
                    <label class="control-label">画像</label>
                        <%= f.attachment_field :image, id:"attachmentImage"%>
                </div>
                <div class="form-group">
                    <label class="control-label">名前</label>
                        <%= f.text_field :name,     class:"form-control", placeholder:"名前（必須）" %>
                </div>
                <div class="form-group">
                    <label class="control-label">愛称/二つ名</label>
                        <%= f.text_field :nickname, class:"form-control", placeholder:"" %>
                </div>
                <div class="form-group">
                    <label class="control-label">性別</label>
                        <%= f.text_field :gender,   class:"form-control", placeholder:"" %>
                </div>
                <div class="form-group">
                    <label class="control-label">年齢</label>
                        <%= f.text_field :age,      class:"form-control", placeholder:"" %>
                </div>
                <div class="form-group">
                    <label class="control-label">種族</label>
                        <%= f.text_field :race,     class:"form-control", placeholder:"" %>
                </div>
                <div class="form-group">
                    <label class="control-label">プロフィール</label>
                        <%= f.text_area :profile,   class:"form-control", placeholder:"300文字以内" ,rows:"8"%>
                </div>
                <div class="form-group">
                    <label class="control-label">うちの子についてのコメント</label>
                        <%= f.text_area :pr,        class:"form-control", placeholder:"300文字以内", rows:"8" %>
                </div>
                <hr>
                <div class="form-button">
                    <%= f.submit "キャラクターを作成",    class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                </div>
            <% end %>
        </div>
    </div>
</div>